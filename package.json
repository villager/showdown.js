{
    "name": "showdown.js",
    "version": "1.0.5",
    "keywords": [
        "Pokemon Showdown",
        "ps.js",
        "Shodwon Bot",
        "bot"
    ],
    "main": "./src/index",
    "license": "MIT",
    "author": {
        "name": "Aldair Beltran",
        "email": "aldairbeltran23@hotmail.com",
        "url": "https://github.com/villager"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/villager/showdown.js.git"
    },
    "scripts": {
        "tsc": "tsc",
        "clean": "prettier --write \"*.{js,md}\" \"**/**/*.js\"",
        "lint": "eslint . --config .eslintrc.json --cache --ext .js"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "useTabs": true,
        "bracketSpacing": false,
        "proseWrap": "always",
        "arrowParens": "avoid",
        "endOfLine": "lf"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "dependencies": {
        "node-gyp": "^7.0.0",
        "request": "^2.88.2",
        "sockjs-client": "^1.4.0",
        "sucrase": "^3.15.0"
    },
    "devDependencies": {
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "prettier": "^2.0.5",
        "typescript": "^3.9.5"
    }
}
