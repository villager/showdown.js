{
    "name": "showdown.js",
    "version": "1.0.0",
    "types": "src",
    "keywords": [
        "Pokemon Showdown",
        "ps.js",
        "Shodwon Bot",
        "bot"
    ],
    "main": "dist/src/index",
    "license": "MIT",
    "author": {
        "name": "Aldair Beltran",
        "email": "aldair.beltran@outlook.com",
        "url": "https://github.com/villager"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/villager/showdown.js.git"
    },
    "scripts": {
        "tsc": "tsc",
        "build": "rm -rf dist/ && node build",
        "build:src": "tsc --module CommonJS --outDir dist",
        "clean": "prettier --write \"*.{js,md}\" \"**/**/*.js\"",
        "lint": "eslint . --config .eslintrc.json --cache --ext .js"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "useTabs": true,
        "bracketSpacing": false,
        "proseWrap": "always",
        "arrowParens": "avoid",
        "endOfLine": "lf"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "@types/node": "^18.14.0",
        "@types/sockjs-client": "^1.5.1",
        "esbuild": "^0.17.9",
        "sockjs-client": "^1.4.0"
    },
    "devDependencies": {
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "prettier": "^2.0.5",
        "typescript": "^4.9.4"
    }
}
