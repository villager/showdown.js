{
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["es2020", "es2017", "es6"],
        "noEmit": true,
        "target": "es2020",
        "skipLibCheck": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "useDefineForClassFields": false
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/**/*.ts"
    ],
    "exclude": ["node_modules"],
}
