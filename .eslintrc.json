{
    "root": true,
    "env": {
        "es6": true,
        "node": true
      },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "plugins": ["import"],
    "rules": {
        "prettier/prettier": [
            2,
            {
                "printWidth": 120,
                "singleQuote": true,
                "quoteProps": "as-needed",
                "trailingComma": "all",
                "useTabs": true,
                "bracketSpacing": false,
                "proseWrap": "always",
                "arrowParens": "avoid",
                "endOfLine": "lf"
            }
        ],
        "no-case-declarations": 0,
        "strict": [2, "global"]
    }
}